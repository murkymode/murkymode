{
    "editor.lightbulb.enabled": true,
    "editor.parameterHints.enabled": true,
    "workbench.tips.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.snippetSuggestions": "inline",
    "editor.wordWrap": "on",
    "editor.tabSize": 4,
    "editor.fontFamily": "Input Mono",
    "editor.fontWeight": 400,
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "terminal.integrated.fontFamily": "Input Mono",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "javascript.suggest.enabled": true,
    "javascript.updateImportsOnFileMove.enabled": "never",
    "javascript.validate.enable": false,
    "window.autoDetectColorScheme": true,
    "workbench.colorTheme": "GitHub Light",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.preferredDarkColorTheme": "Dark++",
    "workbench.preferredLightColorTheme": "GitHub Light",
    "files.trimTrailingWhitespace": true,
    "emmet.showExpandedAbbreviation": "never",
    "eslint.alwaysShowStatus": true,
    "editor.tokenColorCustomizations": {
        /* light */
        "functions": "#8d2aff",
        "numbers": "#ff8000",
        "strings": "#81a101",
        "comments": "#ababab",
        "keywords": "#773eb9",
        "types": "#0059ff",
        // "variables": "#7f40ff",
        /* dark */
        // "comments": "#77a384",
        // "functions": "#c4e452",
        // // "keywords": "#ce2cff",
        // "numbers": "#17e028",
        // // "types": "#FF0000",
        // // "strings": "#e9b97a",
        // // "variables": "#add2ff",
    },
    "workbench.colorCustomizations": {
        "[GitHub Light]": {
            "activityBar.background": "#eaecef",
            // "activityBar.foreground": "#242424",
            // "activityBarBadge.background": "#b36001",
            "list.inactiveSelectionBackground": "#aeceffa7",
            "list.activeSelectionBackground": "#aeceffa7",
            "sideBar.background": "#eaecef",
            // "sideBar.foreground": "#741515",
            // "sideBar.border": "#252526",
            "sideBarSectionHeader.background": "#eaecef",
            // "sideBarSectionHeader.foreground": "#77a384",
            // "editor.foreground": "#bcc0c7",
            // "editorCursor.foreground": "#ff7829",
            "editorGroupHeader.tabsBackground": "#eaecef",
            "terminal.background": "#eaecef",
            // "terminalCursor.foreground": "#29edffce",
            // "terminal.tab.activeBorder": "#29edffce",
            // "terminal.border": "#2b408d",
            // "terminal.ansiRed": "#d310cc",
            "statusBar.background": "#eaecef",
            "statusBarItem.remoteBackground": "#eaecef",
            "titleBar.activeBackground": "#eaecef",
            "titleBar.inactiveBackground": "#eaecef",
            "tab.inactiveBackground": "#eaecef",
            // "tab.activeBackground": "#f7f7f7",
            // "tab.activeBorder": "#f7f7f7",
            // "tab.activeBorderTop": "#f7f7f7",
            "tab.hoverBackground": "#f7f7f7",
