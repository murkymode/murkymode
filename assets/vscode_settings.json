{
    "editor.lightbulb.enabled": true,
    "editor.parameterHints.enabled": true,
    "editor.renderWhitespace": "all",
    "editor.snippetSuggestions": "inline",
    "editor.wordWrap": "on",
    "editor.tabSize": 2,
    "editor.fontFamily": "fira code",
    "editor.fontWeight": 500,
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "terminal.integrated.fontFamily": "fira code",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "javascript.suggest.enabled": true,
    "javascript.updateImportsOnFileMove.enabled": "never",
    "javascript.validate.enable": false,
    "workbench.colorTheme": "Dark++",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "files.trimTrailingWhitespace": true,
    "emmet.showExpandedAbbreviation": "never",
    "eslint.alwaysShowStatus": true,
    "editor.tokenColorCustomizations": {
        "comments": "#77a384",
        "functions": "#c4e452",
        // "keywords": "#ce2cff",
        "numbers": "#17e028",
        // "types": "#FF0000",
        // "strings": "#e9b97a",
        // "variables": "#add2ff",
    },
    "workbench.colorCustomizations": {
        "[Dark++]": {
            "list.inactiveSelectionBackground": "#252526",
            "sideBar.background": "#131313",
            // "sideBar.foreground": "#741515",
            "sideBar.border": "#252526",
            "editor.background": "#131313",
            "editor.foreground": "#bcc0c7",
            "editorCursor.foreground": "#29edffce",
            "terminalCursor.foreground": "#29edffce",
            "terminal.tab.activeBorder": "#29edffce",
            "terminal.border": "#2b408d",
            "terminal.ansiRed": "#d310cc",
            "sideBarSectionHeader.background": "#131313",
            // "sideBarSectionHeader.foreground": "#77a384",
            // "activityBar.foreground": "#b36001",
            "activityBar.background": "#252526",
            "activityBarBadge.background": "#b36001",
            "statusBar.background": "#2b408d",
            "titleBar.activeBackground": "#1a1a1a",
            "tab.inactiveBackground": "#1a1a1a",
            // "scrollbarSlider.activeBackground": "#c0362c",
            "scrollbarSlider.hoverBackground": "#2b408d",
            "badge.background": "#b36001"
        },
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "window.zoomLevel": 0.1,
    "git.autofetch": true,
}
